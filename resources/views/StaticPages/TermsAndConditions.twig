{% extends getPartial('page-design') %}

{% import "Ceres::PageDesign.Macros.LayoutContainer" as LayoutContainer %}

{% block PartialHead %}
    <meta name="description" content="{{ trans('Ceres::Template.termsAndConditionsMetaDescription') }}">
    <meta name="robots" content="{{ config("Ceres.meta.robots_terms_and_conditions") }}">
    <title>{{ trans("Ceres::Template.termsAndConditions") }} | {{ trans("Ceres::Template.headerCompanyName") }}</title>
{% endblock %}

{% block PageBody %}

    {% set termsAndConditions = services.legalInformation.getTermsAndConditions() %}

    <div class="container-max page-content">
        <div class="row">
            <div class="col-xs-12">
                {% autoescape false %}
                    <h1>{{ trans("Ceres::Template.termsAndConditions") }}</h1>
                {% endautoescape %}

                <hr class="m-y-3">

                {% if termsAndConditions.htmlText %}
                    {{ termsAndConditions.htmlText | raw }}
                {% else %}
                    <p class="static-page-plain-text">{{ termsAndConditions.plainText }}</p>
                {% endif %}

                {{ LayoutContainer.show("Ceres::StaticPages.TermsAndConditions") }}
            </div>
        </div>
    </div>

{% endblock %}
